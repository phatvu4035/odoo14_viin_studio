<?xml version="1.0" encoding="utf-8"?>
<templates>

<t t-name="viin_web_studio.EditorViewTypeMenu">
    <div class="o-studio-editor-menu">
        <select>
            <t t-foreach="views" t-as="view">
                <option t-att-value="view"><t t-esc="view"/></option>
            </t>
        </select>
    </div>
</t>

<t t-name="viin_web_studio.redoUndoMenu">
    <div class="o_web_studio_menu_undo_redo">
        <div class="o_web_studio_menu_before_undo_redo"></div>
        <div class="o_web_studio_undo">
            <button class="btn o_web_studio_undo_redo_button"><i class="fa fa-undo"></i><span>Undo</span></button>
        </div>
        <div class="o_web_studio_undo_redo_separator">
            <div class="o_web_studio_undo_redo_separator_line"></div>
        </div>
        <div class="o_web_studio_redo">
            <button class="btn o_web_studio_undo_redo_button"><i class="fa fa-repeat"></i><span>Redo</span></button>
        </div>
    </div>
</t>
